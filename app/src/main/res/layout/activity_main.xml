<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:background="@drawable/bg_vector_6"
    tools:context=".ui.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvLoginMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gotham_narrow_medium"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/checking"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@string/signup_warning"
                tools:textColor="@color/error" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/separator_1"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@color/gray"
                app:layout_constraintTop_toBottomOf="@id/tvLoginMessage" />

            <TextView
                android:id="@+id/tvTopTextEdition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/gotham_narrow_bold"
                android:text="@string/main_primary_text"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/separator_1" />

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/cbTopOnlyFull"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:checked="false"
                android:fontFamily="@font/gotham_narrow_book"
                android:gravity="start|center"
                android:text="@string/filtered_by_only_full_versions"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTopTextEdition" />

            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:id="@+id/spTopTextEdition"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/rounded"
                android:fontFamily="@font/gotham_narrow_book"
                android:padding="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/cbTopOnlyFull"
                app:layout_constraintTop_toBottomOf="@id/cbTopOnlyFull" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDownload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/gotham_narrow_book"
                android:padding="10dp"
                android:text="@string/download_book"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:visibility="gone"
                app:backgroundTint="#3f974b"
                app:backgroundTintMode="multiply"
                app:cornerRadius="4dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/spTopTextEdition"
                app:rippleColor="#ffee33"
                app:strokeColor="#8edea7"
                app:strokeWidth="2dp"
                tools:visibility="visible" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/separator_10"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@color/gray"
                app:layout_constraintTop_toBottomOf="@id/btnDownload" />

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/cbActivePassive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:checked="true"
                android:fontFamily="@font/gotham_narrow_book"
                android:gravity="start|center"
                android:text="@string/active"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/separator_10" />

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/cbTimePreference"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:checked="true"
                android:fontFamily="@font/gotham_narrow_book"
                android:gravity="start|center"
                android:text="@string/works_all_day"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cbActivePassive" />

            <Spinner
                android:id="@+id/spHourStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:background="@drawable/rounded"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cbTimePreference" />

            <Spinner
                android:id="@+id/spMinuteStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:background="@drawable/rounded"
                app:layout_constraintLeft_toRightOf="@id/spHourStart"
                app:layout_constraintTop_toBottomOf="@id/cbTimePreference" />

            <TextView
                android:id="@+id/tvColon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/gotham_narrow_book"
                android:gravity="center"
                android:text=":"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@id/spHourStart"
                app:layout_constraintLeft_toRightOf="@id/spMinuteStart"
                app:layout_constraintTop_toBottomOf="@id/cbTimePreference"
                app:layout_constraintTop_toTopOf="@id/spHourStart" />

            <Spinner
                android:id="@+id/spHourFinish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@drawable/rounded"
                app:layout_constraintLeft_toRightOf="@id/tvColon"
                app:layout_constraintTop_toBottomOf="@id/cbTimePreference" />

            <Spinner
                android:id="@+id/spMinuteFinish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:background="@drawable/rounded"
                app:layout_constraintLeft_toRightOf="@id/spHourFinish"
                app:layout_constraintTop_toBottomOf="@id/cbTimePreference" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/separator_11"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@color/gray"
                app:layout_constraintTop_toBottomOf="@id/spHourStart" />

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/cbAltTextActivePassive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:checked="true"
                android:fontFamily="@font/gotham_narrow_book"
                android:gravity="start|center"
                android:text="@string/show_alternate_text"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/separator_11" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clAlternateText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cbAltTextActivePassive">

                <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                    android:id="@+id/spBottomTextEdition"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/rounded"
                    android:fontFamily="@font/gotham_narrow_book"
                    android:padding="10dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="@id/clAlternateText" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSignOut"
        style="@style/TheButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:text="@string/sign_out"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:visibility="visible" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSignIn"
        style="@style/TheButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:text="@string/sign_in"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnOk"
        style="@style/TheButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:text="@string/main_save_and_close"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/separator_3"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:background="@color/gray"
        app:layout_constraintBottom_toTopOf="@id/btnOk" />

    <include layout="@layout/loadingprogress" />

</androidx.constraintlayout.widget.ConstraintLayout>