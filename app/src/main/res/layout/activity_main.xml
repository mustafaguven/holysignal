<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:background="@drawable/bg_1"
    tools:context=".ui.MainActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/gotham_narrow_bold"
        android:text="@string/preferences"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tvTopTextEdition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/gotham_narrow_bold"
        android:text="@string/main_primary_text"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle" />

    <Button
        android:id="@+id/btnDownloadTop"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="10dp"
        android:background="@color/white"
        android:fontFamily="@font/gotham_narrow_book"
        android:gravity="center"
        android:text="@string/download"
        android:textColor="@color/black"
        android:visibility="visible"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/spTopTextEdition" />


    <ProgressBar
        android:id="@+id/progressTop"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gotham_narrow_book"
        android:indeterminate="false"
        android:max="114"
        android:progress="114"
        android:progressTint="@color/green"
        android:scaleY="2"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="@id/btnDownloadTop"
        app:layout_constraintRight_toRightOf="@id/btnDownloadTop"
        app:layout_constraintTop_toTopOf="@id/spTopTextEdition"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tvProgressTextTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/gotham_narrow_book"
        android:text="1 / 114"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="@id/btnDownloadTop"
        app:layout_constraintRight_toRightOf="@id/btnDownloadTop"
        app:layout_constraintTop_toBottomOf="@id/progressTop"
        tools:visibility="visible" />

    <Spinner
        android:id="@+id/spTopTextEdition"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/white"
        android:fontFamily="@font/gotham_narrow_book"
        android:spinnerMode="dropdown"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btnDownloadTop"
        app:layout_constraintTop_toBottomOf="@id/tvTopTextEdition" />

    <TextView
        android:id="@+id/tvBottomTextEdition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/gotham_narrow_bold"
        android:text="@string/main_alternative_text"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnDownloadTop" />


    <Button
        android:id="@+id/btnDownloadBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:background="@color/white"
        android:fontFamily="@font/gotham_narrow_book"
        android:gravity="center"
        android:text="@string/download"
        android:textColor="@color/black"
        android:visibility="visible"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/spBottomTextEdition" />


    <ProgressBar
        android:id="@+id/progressBottom"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        android:max="114"
        android:progress="114"
        android:progressTint="@color/green"
        android:scaleY="2"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="@id/btnDownloadBottom"
        app:layout_constraintRight_toRightOf="@id/btnDownloadBottom"
        app:layout_constraintTop_toTopOf="@id/spBottomTextEdition"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tvProgressTextBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/gotham_narrow_book"
        android:text="1 / 114"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="@id/btnDownloadBottom"
        app:layout_constraintRight_toRightOf="@id/btnDownloadBottom"
        app:layout_constraintTop_toBottomOf="@id/progressBottom"
        tools:visibility="visible" />

    <Spinner
        android:id="@+id/spBottomTextEdition"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/white"
        android:fontFamily="@font/gotham_narrow_book"
        android:spinnerMode="dropdown"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btnDownloadBottom"
        app:layout_constraintTop_toBottomOf="@id/tvBottomTextEdition" />


    <Button
        android:id="@+id/btnOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/white"
        android:fontFamily="@font/gotham_narrow_book"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/main_save_and_close"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnDownloadBottom" />


