<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_vector_6">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/gotham_narrow_bold"
            android:gravity="center"
            android:text="@string/book_selection"
            android:textColor="@color/black"
            android:textSize="22sp"
            app:layout_constraintBottom_toTopOf="@+id/tvLanguage"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />


        <TextView
            android:id="@+id/tvLanguage"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintBottom_toTopOf="@id/spBook"
            app:layout_constraintLeft_toLeftOf="@id/tvTitle"
            android:textColor="@color/black"
            android:fontFamily="@font/gotham_narrow_book"
            android:textSize="22sp"
            tools:text="Available books for English"/>


        <com.mguven.holysignal.util.searchablespinner.SearchableSpinner
            android:id="@+id/spBook"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/rounded"
            android:padding="10dp"
            app:layout_constraintBottom_toTopOf="@+id/btnDownload"
            app:layout_constraintLeft_toLeftOf="@id/tvTitle"
            app:layout_constraintRight_toRightOf="@id/tvTitle"
            app:layout_constraintTop_toBottomOf="@id/tvLanguage" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDownload"
            style="@style/TheButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:text="@string/download"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="@+id/spBook"
            app:layout_constraintTop_toBottomOf="@id/spBook" />

        <ProgressBar
            android:id="@+id/progress"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/gotham_narrow_book"
            android:indeterminate="false"
            android:max="114"
            android:progress="114"
            android:progressTint="@color/colorAccent"
            android:scaleY="2"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="@id/spBook"
            app:layout_constraintRight_toRightOf="@id/spBook"
            app:layout_constraintTop_toBottomOf="@id/btnDownload"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tvProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/gotham_narrow_book"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:visibility="visible"
            app:layout_constraintLeft_toLeftOf="@id/spBook"
            app:layout_constraintRight_toRightOf="@id/spBook"
            app:layout_constraintTop_toBottomOf="@id/progress"
            tools:text="1 / 114"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include layout="@layout/loadingprogress" />

</androidx.constraintlayout.widget.ConstraintLayout>


